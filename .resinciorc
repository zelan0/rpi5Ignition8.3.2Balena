# .resinciorc - balena build configuration
# This file tells balena to include the Ignition zip file during build
# without adding it to the Git repository

image: balenalib/raspberrypi5-debian:latest

# Include additional files during build
build:
  extraFiles:
    # Include the Ignition zip file from local filesystem
    - source: ./Ignition-linux-aarch-64-8.3.2-rc2.zip
      destination: Ignition-linux-aarch-64-8.3.2-rc2.zip

# Optional: Docker build arguments
# args:
#   IGNITION_VERSION: "8.3.2"
